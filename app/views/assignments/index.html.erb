<h1>Assignments for <%= @course.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.description %></td>
        <td><%= assignment.due_date %></td>
        <td><%= link_to 'Show', course_assignment_path(@course, assignment) %></td>
        <td><%= link_to 'Edit', edit_course_assignment_path(@course, assignment) %></td>
        <td><%= button_to 'Destroy', course_assignment_path(@course, assignment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_course_assignment_path(@course) %>
<%= link_to 'Back to Course', course_path(@course) %>