<p id="notice"><%= notice %></p>

<h1><%= @course.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<h2>Enrolled Students</h2>
<% if @course.students.any? %>
  <ul>
    <% @course.students.each do |student| %>
      <li><%= link_to student.name, student_path(student) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No students enrolled yet.</p>
<% end %>

<h2>Assignments</h2>
<%= link_to 'View Assignments', course_assignments_path(@course) %>

<br>

<%= link_to 'Edit Course', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>